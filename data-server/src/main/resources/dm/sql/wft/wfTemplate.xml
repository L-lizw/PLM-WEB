<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
"../../mybatis-3-mapper.dtd">
<mapper namespace="dyna.common.dtomapper.template.wft.WorkflowTemplateInfoMapper">

	<select id="selectForLoad"  resultType="dyna.common.dto.template.wft.WorkflowTemplateInfo">
        SELECT *
          FROM WF_TEMPLATE A
    </select>
    
    <select id="get" parameterType="java.lang.String" resultType="dyna.common.dto.template.wft.WorkflowTemplateInfo" statementType="STATEMENT">
		SELECT *
		  FROM WF_TEMPLATE
		 WHERE GUID = #GUID#
	</select>

    <insert id="insert" parameterType="dyna.common.dto.template.wft.WorkflowTemplateInfo">
        INSERT INTO WF_TEMPLATE(GUID, 
                                WFTID, 
                                WFTNAME, 
                                WFNAME,
                                BMGUID,
                                TITLE,
                                CREATEUSERGUID, 
                                CREATETIME, 
                                UPDATEUSERGUID, 
                                UPDATETIME,
                                ISVALID,
                                REQUIREDEXECUTOR
                               )
        VALUES(#GUID:VARCHAR:NULL#,
               #WFTID:VARCHAR:NULL#,
               #WFTNAME:VARCHAR:NULL#,
               #WFNAME:VARCHAR:NULL#,
               #BMGUID:VARCHAR:NULL#,
               #TITLE:VARCHAR:NULL#,
               #CREATEUSERGUID:VARCHAR:NULL#,
               #CURRENTTIME:TIMESTAMP#,
               #UPDATEUSERGUID:VARCHAR:NULL#,
               #CURRENTTIME:TIMESTAMP#,
               '1',
               #REQUIREDEXECUTOR:VARCHAR:NULL#
              )
    </insert>

    <update id="update" parameterType="java.util.HashMap">
        UPDATE WF_TEMPLATE 
               <set>
                   UPDATEUSERGUID = #UPDATEUSERGUID#,
                   UPDATETIME = #CURRENTTIME:TIMESTAMP#,
                   <if test="ID" >
                       WFTID = #WFTID#,
                   </if>
                   <if test="WFTNAME" >
                       WFTNAME = #WFTNAME#,
                   </if>
                   <if test="WFNAME" >
                       WFNAME = #WFNAME#,
                   </if>
                   <if test="BMGUID" >
                       BMGUID = #BMGUID#,
                   </if>
                   <if test="TITLE" >
                       TITLE = #TITLE#,
                   </if>
                   <if test="ISVALID" >
                       ISVALID = #ISVALID#,
                   </if>
                   <if test="REQUIREDEXECUTOR" >
                       REQUIREDEXECUTOR = #REQUIREDEXECUTOR#,
                   </if>
               </set>
         WHERE GUID = #GUID#
    </update>

    <delete id="delete" parameterType="java.lang.String">
        DELETE FROM WF_TEMPLATE WHERE GUID = #GUID#
    </delete>

</mapper>