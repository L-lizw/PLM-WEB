                    (guid, 
					 procrtguid, 
					 instanceguid, 
					 viewname, 
					 leveltype,
					 bomtype
                    )
        values(#GUID:VARCHAR:NULL#, 
               #PROCRTGUID:VARCHAR:NULL#, 
               #INSTANCEGUID:VARCHAR:NULL#,
               #VIEWNAME:VARCHAR:NULL#,
               #LEVELTYPE:VARCHAR:NULL#,
               #BOMTYPE:VARCHAR:NULL#
