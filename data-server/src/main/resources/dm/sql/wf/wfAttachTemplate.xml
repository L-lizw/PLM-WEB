    <insert id="insertrelation" parameterType="dyna.common.dto.wf.ProcAttachSetting">
        insert into wf_attachrelationsetting
                    (guid, 
                     procrtguid, 
                     instanceguid, 
                     viewname, 
                     leveltype
                    )
        values(#GUID:VARCHAR:NULL#, 
               #PROCRTGUID:VARCHAR:NULL#, 
               #INSTANCEGUID:VARCHAR:NULL#,
               #VIEWNAME:VARCHAR:NULL#,
               #LEVELTYPE:VARCHAR:NULL#
              )
