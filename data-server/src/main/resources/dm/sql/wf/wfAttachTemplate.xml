	        <if test="instanceguid!=null">instanceguid = #instanceguid#,</if>
	        <if test="VIEWNAME!=null">viewname = #VIEWNAME#,</if>
	        <if test="LEVELTYPE!=null">leveltype = #LEVELTYPE#</if>
        </set>
